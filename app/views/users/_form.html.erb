<% @user = @user || User.new %>
<% if @user.errors.any? %>
  <div class="error">
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, :autofocus => true, :required => true, :placeholder => 'Name'%>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, :required => true, :placeholder => 'Email' %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, :required => true, :placeholder => 'Password' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm password' %>
    <%= f.password_field :password_confirmation, :required => true, :placeholder => 'Confirm password' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Sign up', :class => 'btn-signup-form' %>
  </div>
<% end %>